<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    strictBinaryOperands="true"
    allowPhpStormGenerics="true"
    findUnusedVariablesAndParams="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <directory name="src/Architecture/"/>
            <directory name="src/CheeperSpaghetti/"/>
            <directory name="src/CheeperLayered/"/>
            <file name="src/App/Kernel.php"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <!-- Due to a bug in PSALM. See https://github.com/vimeo/psalm/issues/2319 -->
                <file name="src/Architecture/CQRS/Infrastructure/Persistence/Doctrine/DoctrineFollowersRepository.php"/>
                <referencedProperty name="Symfony\Bundle\FrameworkBundle\Controller\AbstractController::$container" />
            </errorLevel>
        </PropertyNotSetInConstructor>
    </issueHandlers>

    <stubs>
        <file name=".psalm-stubs/lstrojny-functional-php.phpstub"/>
        <file name=".psalm-stubs/doctrine-orm.phpstub"/>
        <file name=".psalm-stubs/symfony-messenger.phpstub"/>
        <file name=".psalm-stubs/api-platform.phpstub"/>
        <file name=".psalm-stubs/symfony-validator.phpstub"/>
        <file name=".psalm-stubs/predis.phpstub"/>
    </stubs>

    <plugins>
        <pluginClass class="Weirdan\DoctrinePsalmPlugin\Plugin"/>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin"/>
    </plugins>
</psalm>
